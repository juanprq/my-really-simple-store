- @view_name = 'Administradores'

= render 'shared/resource_navbar', {link_message: 'Agregar administrador', resource: Admin}
      
- unless @admins.empty?
  .table-responsive
    %table.table.table-hover
      %thead
        %tr
          %th #
          %th Nombre
          %th Identificación
          %th Correo electrónico
          %th Teléfono
          %th Acciones
      %tbody
        - @admins.each do |admin|
          %tr
            %td= admin.id
            %td= admin.name
            %td= admin.identification
            %td= admin.email
            %td= admin.phone
            %td
              = link_to admin, class: 'btn btn-primary' do
                %span.glyphicon.glyphicon-search
              = link_to edit_admin_path(admin), class: 'btn btn-warning' do
                %span.glyphicon.glyphicon-pencil
              = link_to admin, class: 'btn btn-danger delete', data: {message: 'Se encuentra a punto de eliminar un administrador'} do
                %span.glyphicon.glyphicon-trash
  = will_paginate @admins