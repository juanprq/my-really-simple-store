- @view_name = 'Clientes'

= navbar do
  .navbar-header
    %span.navbar-brand
      Filtrar
  = form_tag clients_path, method: :get, class: 'navbar-form navbar-left', role: 'search' do
    .form-group
      = search_field_tag :q, @q, placeholder: 'Filtros', class: 'form-control'
    %button.btn.btn-default{type: 'submit'}
      Buscar

  %ul.nav.navbar-nav.navbar-right
    %li
      = link_to 'Agregar cliente', new_client_path

- unless @clients.empty?
  .table-responsive
    %table.table.table-hover
      %thead
        %tr
          %th #
          %th Nombre
          %th Identificación
          %th Teléfono
          %th Acciones
      %tbody
        - @clients.each do |client|
          %tr
            %td client.id
            %td client.name
            %td client.identification
            %td client.phone
            %td
              = link_to 'Ver', client
              = link_to 'Editar', edit_client_path, client
              = link_to 'Eliminar', client, method: :delete, data: {confirm: 'esta seguro?'}
  = will_paginate @clients