= form_for @game, html: {multipart: true} do |f|
  = render 'shared/error_messages', object: f.object
  
  .form-group
    = f.label :name, 'Nombre'
    = f.text_field :name, class: 'form-control', placeholder: 'ej. Heroclix'

  .form-group
    = f.label :description, 'Descripción'
    = f.text_area :description, rows: 5, class: 'form-control'

  .form-group
    = f.label :image, 'Imágen'
    = f.file_field :image

  = f.submit 'Guardar', class: 'btn btn-success btn-outline'
  - unless @game.new_record?
    = link_to 'Eliminar', @game, class: 'btn btn-danger btn-outline inactivate', data: {message: 'Se encuentra a punto de inactivar un juego'}
  = link_to 'Atrás', games_path, class: 'btn btn-primary btn-outline'