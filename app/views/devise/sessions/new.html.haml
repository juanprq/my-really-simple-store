.row
  .col-sm-6.col-md-4.col-md-offset-4
    .account-wall
      #my-tab-content.tab-content
        #login.tab-pane.active
          %img.profile-img{src: 'https://lh5.googleusercontent.com/-b0-k99FZlyE/AAAAAAAAAAI/AAAAAAAAAAA/eu7opA4byxI/photo.jpg?sz=120'}
          = form_for resource, as: resource_name, url: session_path(resource_name), html: {class: 'form-signin'} do |f|
            = f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'Email', required: true
            = f.password_field :password, autocomplete: 'off', class: 'form-control', placeholder: 'Contrase√±a'

            = f.check_box :remember_me
            = f.label :remember_me, 'Recordarme'

            = f.submit 'Entrar', class: 'btn btn-lg btn-primary btn-block'